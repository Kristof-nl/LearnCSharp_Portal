@model IEnumerable<Source>    

@{
    ViewData["Title"] = "Source";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Source List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Source" asp-action="Create"  class="btn btn-primary float-end">
                <i class="bi bi-plus-circle"></i>  Create New Source
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Source Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="70%">
                    @obj.Name
                </td>
                 <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="Source" asp-action="Edit" asp-route-id="@obj.Id" 
                        class="btn btn-primary mx-2 btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
                         <a asp-controller="Source" asp-action="Delete" asp-route-id="@obj.Id" 
                        class="btn btn-danger mx-2 btn-sm"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>
