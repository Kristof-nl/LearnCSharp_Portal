@model Subcategory

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">   
        <div class="row pb-2">
            <h2 class="text-primary">Create Subcategory</h2>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
         </div>
         <button type="submit" asp-route-categoryId="@ViewBag.Id" class="btn btn-danger" style="width:150px">Delete</button>
         <a asp-controller="Subcategory" asp-action="Index" class="btn btn-secondary" style="width:150px">
             Back to List
         </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}