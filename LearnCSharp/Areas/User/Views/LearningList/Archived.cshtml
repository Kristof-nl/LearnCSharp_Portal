@model LearningList

<div class="container mt-4">
	<div class="col-12">
		<div class="card-header bg-primary text-light rounded">
			<div class="row">
				<div class="col-12  pt-2">
					<h4 class="text-white">List of archived tutorials</h4>
				</div>
			</div>
		</div>
		<div class="card-body">
			@foreach(var item in Model.ArchivedTutorials)
			{
				<div class="row mb-2 rounded p-1" style="border:1px solid #8f96e3; border-radius: 5px;">
					<div class="col-lg-1 text-center py-2">
						<img src="@item.ImgUrl" class="rounded my-1" width="100%" />
					</div>
					<div class="col-8 col-lg-8  my-4 text-start fw-bold">
						@item.Title
					</div>
					<div class="col-4 col-lg-2 my-4 text-end">
						@item.Author
					</div>
				</div>
			}
		</div> 
			
		<div class="card-footer rounded mb-2 p-4" style="background-color:#3459e6">
			<div class="col-12 text-end">
				<a asp-controller="Home" asp-action="Index" class="btn btn-secondary ">Back to Home Page</a>
				<a asp-controller="LearningList" asp-action="Index" class="btn btn-success ">Back to Learning List</a>
			</div>
		</div>
	</div>
</div>